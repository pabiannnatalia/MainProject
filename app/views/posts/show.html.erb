<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<%= video_tag @post.video, :size => "320x240", :controls => true %><br>
     <div class="btn-group">

           <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-default" %>
           <%= link_to 'Destroy', @post, :class => "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
